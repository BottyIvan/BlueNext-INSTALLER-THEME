<resources>

    <!-- Base application theme. -->
    <style name="Botty.Theme" parent="MaterialDrawerTheme">
        <!-- Customize your theme here. -->
        <item name="android:windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="colorAccent">#f8a19d</item>
        <item name="colorPrimary">#f1433c</item>
        <item name="colorPrimaryDark">@color/material_red_700</item>
        <item name="android:colorActivatedHighlight">#F13C90</item>

        <!-- MaterialDrawer specific values -->
        <item name="material_drawer_background">@color/material_drawer_background</item>
        <item name="material_drawer_primary_text">@color/material_drawer_primary_text</item>
        <item name="material_drawer_secondary_text">@color/material_drawer_secondary_text</item>
        <item name="material_drawer_primary_icon">@color/material_drawer_primary_icon</item>
        <item name="material_drawer_hint_text">@color/material_drawer_hint_text</item>
        <item name="material_drawer_divider">@color/material_drawer_divider</item>
        <item name="material_drawer_selected">@color/material_drawer_selected</item>
        <item name="material_drawer_selected_text">#F1433C</item>
        <item name="material_drawer_header_selection_text">@color/material_drawer_primary_text</item>
    </style>

    <style name="Botty.Install.Theme" parent="MaterialDrawerTheme">
        <!-- Customize your theme here. -->
        <item name="android:windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="colorAccent">#f2554f</item>
        <item name="colorPrimary">#f1433c</item>
        <item name="colorPrimaryDark">#f8a19d</item>

        <!-- MaterialDrawer specific values -->
        <item name="material_drawer_background">@color/material_drawer_dark_background</item>
        <item name="material_drawer_primary_text">@color/material_drawer_dark_primary_text</item>
        <item name="material_drawer_secondary_text">@color/material_drawer_dark_secondary_text</item>
        <item name="material_drawer_primary_icon">@color/material_drawer_primary_icon</item>
        <item name="material_drawer_hint_text">@color/material_drawer_dark_hint_text</item>
        <item name="material_drawer_divider">@color/material_drawer_dark_divider</item>
        <item name="material_drawer_selected">@color/material_drawer_dark_selected</item>
        <item name="material_drawer_selected_text">#F1433C</item>
        <item name="material_drawer_header_selection_text">@color/material_drawer_dark_primary_text</item>
    </style>

    <style name="Botty.Install.Theme.Checkbox" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorAccent">#F13C90</item>
    </style>

    <style name="Botty.Install.Theme.Light" parent="MaterialDrawerTheme.Light">
        <!-- Customize your theme here. -->
        <item name="android:windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="colorAccent">#f2554f</item>
        <item name="colorPrimary">#f1433c</item>
        <item name="colorPrimaryDark">#f8a19d</item>

        <!-- MaterialDrawer specific values -->
        <item name="material_drawer_background">@color/material_drawer_background</item>
        <item name="material_drawer_primary_text">@color/material_drawer_primary_text</item>
        <item name="material_drawer_secondary_text">@color/material_drawer_secondary_text</item>
        <item name="material_drawer_primary_icon">@color/material_drawer_dark_primary_icon</item>
        <item name="material_drawer_hint_text">@color/material_drawer_hint_text</item>
        <item name="material_drawer_divider">@color/material_drawer_divider</item>
        <item name="material_drawer_selected">@color/material_drawer_selected</item>
        <item name="material_drawer_selected_text">#F1433C</item>
        <item name="material_drawer_header_selection_text">@color/material_drawer_primary_text</item>
    </style>

    <style name="Botty.Theme.Donate" parent="Botty.Install.Theme"/>

    <style name="Botty.Theme.About" parent="Theme.AppCompat.Light">
        <item name="android:windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="colorAccent">#f2554f</item>
        <item name="colorPrimary">#f1433c</item>
        <item name="colorPrimaryDark">#f8a19d</item>
    </style>
</resources>
