<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
<PreferenceCategory
    android:title="@string/theme_option">
    <SwitchPreference
        android:title="@string/use_always_rev_dark"
        android:key="true_gothic"
        android:defaultValue="false"/>
    </PreferenceCategory>
<PreferenceCategory
    android:title="@string/info_category">
    <PreferenceScreen
        android:title="@string/info_for_installer"/>
    <PreferenceScreen
        android:title="@string/info_for_bleu_next"
        android:summary="@string/summery_for_blue_next"/>
    <PreferenceScreen
        android:title="@string/info_for_blue_next_lollipop"
        android:summary="@string/summery_blue_next_lollipop"/>
