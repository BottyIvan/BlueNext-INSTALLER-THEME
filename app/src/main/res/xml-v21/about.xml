            android:title="@string/installer_on_github">
            <intent
                android:action="android.intent.action.VIEW"
                android:data="https://github.com/BottyIvan/BlueNext-INSTALLER-THEME"/>
            </PreferenceScreen>
        </PreferenceCategory>
<PreferenceCategory
        android:title="@string/contact_category">
        <PreferenceScreen
            android:title="+Ivan Botty">
            <intent
                android:action="android.intent.action.VIEW"
                android:data="https://plus.google.com/+IvanBotty/posts"/>
        </PreferenceScreen>
        <PreferenceScreen
            android:title="Community: IvanBotty">
            <intent
                android:action="android.intent.action.VIEW"
                android:data="https://plus.google.com/communities/115585040661775398640"/>
            </PreferenceScreen>
    </PreferenceCategory>
</PreferenceScreen>