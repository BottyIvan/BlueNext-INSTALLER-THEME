<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="Botty.Install.Theme" parent="MaterialDrawerTheme.TranslucentStatus">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:colorPrimaryDark">@color/material_cyan_700</item>
        <item name="android:colorPrimary">@color/material_cyan_200</item>
        <item name="android:colorAccent">@color/material_cyan_700</item>
        <item name="android:colorActivatedHighlight">@color/material_yellow_200</item>
        <item name="android:colorEdgeEffect">@color/white</item>
    </style>

    <style name="Botty.Install.Theme.Light" parent="MaterialDrawerTheme.Light.DarkToolbar.TranslucentStatus">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:colorPrimaryDark">@color/material_cyan_700</item>
        <item name="android:colorPrimary">@color/material_cyan_200</item>
        <item name="android:colorAccent">@color/material_cyan_700</item>
        <item name="android:colorActivatedHighlight">@color/material_yellow_200</item>
        <item name="android:colorEdgeEffect">@color/white</item>
    </style>
</resources>